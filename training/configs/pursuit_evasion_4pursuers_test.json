{
  "metadata": {
    "experiment_name": "pursuit_evasion_4pursuers_test",
    "version": "1.0",
    "description": "Simple 4-pursuer PE test run to validate training stability with fixed hyperparameters",
    "task": "Pursuit-Evasion",
    "num_configs": 1,
    "notes": "Minimal config for quick validation. 4 pursuers, 2M timesteps (~250 iterations at 8 envs), fixed hyperparameters (n_steps=256, batch_size=512)"
  },

  "defaults": {
    "env_config": {
      "num_pursuers": 4,
      "world_size": 100.0,
      "max_steps": 500,
      "obs_model": "global_basic",
      "evader_strategy": "huttenrauch",
      "capture_radius": 1.0,
      "evader_speed": 10.0,
      "v_max": 5.0,
      "omega_max": 2.0,
      "kinematics": "single",
      "max_pursuers": 100,
      "torus": true
    },
    "train_config": {
      "activation": "relu",
      "aggregation": "mean",
      "phi_layers": 1,
      "algorithm": "trpo",
      "total_timesteps": 2000000,
      "num_vec_envs": 4,
      "n_steps": 256,
      "batch_size": 512,
      "learning_rate": 0.001,
      "verbose": 1
    }
  },

  "experiments": {
    "pe_4pursuers_embed64_seed0": {
      "description": "Test run: 4 pursuers, embed_dim=64, seed=0",
      "env_config": {
        "obs_model": "global_basic"
      },
      "train_config": {
        "embed_dim": 64,
        "policy_layers": [64, 64],
        "seed": 0
      }
    }
  }
}
